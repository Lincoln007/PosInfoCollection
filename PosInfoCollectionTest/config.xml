<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="FtpHost" value="127.0.0.1" />
    <add key="FtpUsername" value="test" />
    <add key="FtpPassword" value="test" />
    <!-- 上传的FTP目录,需要保证FTP上已经创建了目录 -->
    <add key="FtpUpload" value="/pos/incoming" />
    <!-- 本地文件路径(不要带盘符) -->
    <add key="LocalPath" value="\mi\upload" />
    <!-- 本地扫描周期(秒) -->
    <add key="ScanPeriod" value="60" />
    <!-- 上传成功后的归档子目录(会自动创建目录) -->
    <add key="ArchiveDirectory" value="archive" />
    <!-- 归档保存的天数 -->
    <add key="ArchiveLife" value="30" />
  </appSettings>
</configuration>